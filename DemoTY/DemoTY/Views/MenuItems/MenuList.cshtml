@model IEnumerable<DemoTY.Models.MenuItem>

@{
    ViewBag.Title = "MenuList";
}

<h2>Menu Items List - Admin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model != null)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfLaunch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeDelivery)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfLaunch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreeDelivery)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.ProductId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId },
           new { onclick = "return confirm('Are you sure you want to delete " + item.Name + " ?')" })
        </td>
    </tr>
}

</table>
}